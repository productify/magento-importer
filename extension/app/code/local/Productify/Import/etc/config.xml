<?xml version="1.0"?>
<config>
    <modules>
        <Productify_Import>
            <version>0.1.0</version>
        </Productify_Import>
    </modules>
    <frontend>
        <routers>
            <import>
                <use>standard</use>
                <args>
                    <module>Productify_Import</module>
                    <frontName>import</frontName>
                </args>
            </import>
        </routers>
        <layout>
            <updates>
                <import>
                    <file>import.xml</file>
                </import>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<import>
				<use>admin</use>
				<args>
					<module>Productify_Import</module>
					<frontName>import</frontName>
				</args>
			</import>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<import module="import">
				<title>Productify</title>
				<sort_order>71</sort_order>               
				<children>
					<import_adminform module="import">
						<title>Import products</title>
						<sort_order>0</sort_order>
						<action>import/adminhtml_link</action>
					</import_adminform>
				</children>
			</import>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Productify_Import>
							<title>My Form</title>
							<sort_order>10</sort_order>
						</Productify_Import>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<import>
					<file>import.xml</file>
				</import>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <import>
                <class>Productify_Import_Model</class>
                <resourceModel>import_mysql4</resourceModel>
            </import>
            <import_mysql4>
                <class>Productify_Import_Model_Mysql4</class>
                <entities>
                    <import>
                        <table>productify_import</table>
                    </import>
                </entities>
            </import_mysql4>
        </models>
        <resources>
            <import_setup>
                <setup>
                    <module>Productify_Import</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </import_setup>
            <import_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </import_write>
            <import_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </import_read>
        </resources>
        <blocks>
            <import>
                <class>Productify_Import_Block</class>
            </import>
        </blocks>
        <helpers>
            <import>
                <class>Productify_Import_Helper</class>
            </import>
        </helpers>
    </global>
</config>